{
  "name": "the-box",
  "version": "1.0.0",
  "private": true,
  "description": "Gaming screenshot guessing application",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "dev:backend": "npm run dev -w @the-box/backend",
    "dev:frontend": "npm run dev -w @the-box/frontend",
    "build": "npm run build --workspaces --if-present",
    "build:types": "npm run build -w @the-box/types",
    "build:backend": "npm run build -w @the-box/backend",
    "build:frontend": "npm run build -w @the-box/frontend",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "db:migrate": "npm run db:migrate -w @the-box/backend",
    "db:rollback": "npm run db:rollback -w @the-box/backend",
    "db:seed": "npm run db:seed -w @the-box/backend",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "devDependencies": {
    "shadcn": "^3.6.3"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.11"
  }
}
